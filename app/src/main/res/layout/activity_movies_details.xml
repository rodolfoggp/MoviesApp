<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.rodolfogusson.testepag.viewmodel.moviesdetails.MovieDetailsViewModel" />

        <import type="com.rodolfogusson.testepag.infrastructure.ui.UIUtil" />

    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/singleSpace"
        android:layout_marginRight="@dimen/singleSpace"
        android:orientation="vertical"
        tools:context=".view.moviesdetails.MovieDetailsActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="3"
            android:text="@{viewModel.movie.title}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/halfSpace"
            android:text="@{UIUtil.genresNames(viewModel.movie.genres)}"
            android:textColor="@color/lightGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/halfSpace"
            android:layout_marginBottom="@dimen/singleSpace"
            android:text="@{String.format(@string/release_date_details, UIUtil.fullDateText(viewModel.movie.releaseDate))}"
            android:textColor="@color/lightGrey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightGrey" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/singleSpace"
            android:text="@{viewModel.movie.overview}" />

        <ImageView
            android:id="@+id/detailsImage"
            android:layout_width="@dimen/imageWidth"
            android:layout_height="@dimen/imageHeight"
            android:layout_marginTop="@dimen/singleSpace"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:imageUrl="@{viewModel.movie.imageUrl}" />

    </LinearLayout>

</layout>