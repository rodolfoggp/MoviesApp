<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:buttonStyle">@style/DialogButton</item>
        <item name="android:dialogTheme">@style/Dialog</item>
    </style>

    <style name="DialogButton">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/holo_red_dark</item>
        <item name="android:titleTextStyle">@style/DialogTitle</item>
    </style>

</resources>
